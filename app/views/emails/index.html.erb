<div class="container">
  <div id="form-paper">
    <div class="form-heading">
      <h1>Send Rejection Emails</h1>
    </div>

    <div class="well">
      <div class="container">
      <h4> Here is who you have invited to the RFP stage: </h4>
        <ul class="list-group">
          <% @lois.each do |loi| %>
            <% if loi.invited_lois[0] != nil && loi.invited_lois[0].status == true %>
                <li class="list-group-item"> ORG: <%= loi.org_name %>, Email: <%= loi.user.email %> </li>
            <%end%>
          <%end%>
        </ul>
      </div>
    </div>

    <div class="well">
      <div class="container">
      <h4> Here is who has already been rejected: </h4>
        <ul class="list-group">
          <% @lois.each do |loi| %>
            <% if loi.invited_lois[0] != nil && loi.invited_lois[0].status == false %>
                <li class="list-group-item"> ORG: <%= loi.org_name %>, Email: <%= loi.user.email %> </li>
            <%end%>
          <%end%>
        </ul>
      </div>
    </div>

    <div class="well">
      <div class="container">
      <h4> Here is who you are about to send rejection emails to: </h4>
        <ul class="list-group">
          <% @lois.each do |loi| %>
            <% if loi.invited_lois.empty? %>
                <li class="list-group-item"> ORG: <%= loi.org_name %>, Email: <%= loi.user.email %> </li>
            <%end%>
          <%end%>
        </ul>
      </div>

      <div class="send-reject-btn">
        <% if current_user && current_user.super_admin %>
          <%= link_to "Send Rejection Emails", "/emails", method: :post, :class => "btn btn-danger", :role => "button", :data => {:confirm => 'Just to confirm, you are about to send everyone in the list above a rejection letter for their LOI.'} %>
        <% end %>
      </div>
    </div>

</div>
</div>
